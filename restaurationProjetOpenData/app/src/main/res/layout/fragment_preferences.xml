        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <CheckBox
        android:id="@+id/filter_cafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CafÃ©" />

    <CheckBox
        android:id="@+id/filter_pub"
